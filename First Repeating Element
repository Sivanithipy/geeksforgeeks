import java.util.*;

class Solution {
    public static int firstRepeated(int[] arr) {
        HashSet<Integer> seen = new HashSet<>();
        int firstRepeatIndex = -1;
        for (int i = arr.length - 1; i >= 0; i--) {
            if (seen.contains(arr[i])) {
                firstRepeatIndex = i; 
            } else {
                seen.add(arr[i]);
            }
        }
        return (firstRepeatIndex == -1) ? -1 : firstRepeatIndex + 1;
    }
}
